{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"target": "es6",
		"noImplicitAny": true,
		"allowJs": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"exclude": [
		"dist/*/**"
	]
}
